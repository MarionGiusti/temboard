#!/bin/bash -eu
#
# Generate environment variables for development.
#

# Configure a routable UI address to configure agent-to-UI communication from
# Docker container.

mapfile -t hostaddr < <(hostname --all-ip-addresses | tr ' ' '\n')
test -n "${hostaddr[*]}"
TEMBOARD_UI_URL="http://${hostaddr[0]}:8888"

cat <<-EOF
# Generated by $0 at $(date).
TEMBOARD_UI_URL=${TEMBOARD_UI_URL@Q}
EOF
